class Solution:
    def longestPalindrome(self, s: str) -> int:
        h_table = {}
        uneven = 0
        total = 0
        
        for ch in s:
            h_table[ch] = h_table.get(ch, 0) + 1
        
        for v in h_table.values():
            if not uneven:
                uneven += v % 2
            
            total += (v // 2) *2
            
        return total + uneven 
